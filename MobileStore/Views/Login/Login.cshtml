@model MobileStore.Models.Customer
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Css/Login.css" rel="stylesheet"/>

<div class="account-page">
    <div class="container">
        <div class="row">
            <div class="col-1">
                <img src="~/Images/Mobfront.png" style="width:30%">
            </div>
            <div class="col-2">
                <div class="form-container">
                    <div class="form-btn"> 
                        <span>Login</span>
                    </div>
                    <form id="LoginForm" action="@Url.Action("Login","Login")" method="post">
                        <input type="text" placeholder="Username" name="Username">
                        <span style="color:red">@ViewData["NoUser"]</span>
                        <input type="password" placeholder="Password" name="Password">
                        <span style="color:red">@ViewData["WrongPass"]</span>
                        <button type="submit" class="btn">Login</button>
                        <a href="">Don't have an Account</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

